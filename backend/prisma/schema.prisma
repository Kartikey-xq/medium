generator client {
  provider   = "prisma-client-js"
  engineType = "edge"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String

  posts         Post[]
  givenLikes    Like[]
  givenComments Comment[]
  givenSaves    Save[]
}

model Post {
  id          String   @id @default(uuid())
  title       String
  content     String
  description String
  published   Boolean  @default(false)
  imageUrl    String?

  authorId   String
  authorName String
  author     User     @relation(fields: [authorId], references: [id])

  likes    Like[]
  comments Comment[]
  saves    Save[]
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  blogId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [blogId], references: [id])

  @@unique([userId, blogId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  userId    String
  blogId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [blogId], references: [id])
}

model Save {
  id        String   @id @default(uuid())
  userId    String
  blogId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [blogId], references: [id])

  @@unique([userId, blogId])
}
